---
export interface Props {
  title: string;
  desc: string;
  techs: string[];
  github?: string;
}
const { title, desc, techs, github } = Astro.props;
---

<div class="project-card">
  <div class="card-top">
    <h3>{title}</h3>
    <p>{desc}</p>
  </div>

  <div class="card-tags">
    {techs.map((tech) => <span class="tag">{tech}</span>)}
  </div>

  {
    github && (
      <div class="project-links">
        <a href={github} target="_blank" class="btn github">
          GitHub
        </a>
      </div>
    )
  }
</div>

<style>
  .project-card {
    cursor: pointer;
    background: var(--bg-secondary);
    border-radius: 15px;
    border: 1px solid rgba(99, 102, 241, 0.1);
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* pushes bottom sections down */
    height: 100%; /* important: full height in grid */
    padding: 2rem;
    gap: 10px;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(99, 102, 241, 0.2);
  }

  /* Top content stretches to fill space */
  .card-top {
    display: flex;
    flex-direction: column;
    gap: 2rem; /* space between title and description */
    flex-grow: 1; /* important: pushes tags and button down */
  }

  .card-top h3 {
    color: var(--text-primary);
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0;
  }

  .card-top p {
    color: var(--text-secondary);
    font-size: 1rem;
    margin: 0;
  }

  /* Tags section */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem; /* space between tags */
    margin-top: 1rem;
  }

  .tag {
    background: rgba(99, 102, 241, 0.2);
    color: var(--accent-light);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
  }

  .tag:hover {
    background: var(--accent);
    color: white;
  }

  /* Button section */
  .project-links {
    display: flex;
    margin-top: 1rem;
  }

  .btn {
    padding: 0.6rem 1.2rem;
    border-radius: 12px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .btn.github {
    background: #24292f;
    color: white;
    border: none;
  }

  .btn.github:hover {
    background: #444c56;
  }

  /* Grid container */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem; /* space between cards */
    align-items: stretch; /* ensures all cards same height */
  }
</style>
