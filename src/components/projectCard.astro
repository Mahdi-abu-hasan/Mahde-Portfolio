---
export interface Props {
  title: string;
  desc: string;
  techs: string[];
  github?: string;
}
const { title, desc, techs, github } = Astro.props;
---

<div class="project-card">
  <div class="project-content">
    <h3>{title}</h3>
    <p>{desc}</p>

    <div class="project-tags">
      {techs.map((tech) => <span class="tag">{tech}</span>)}
    </div>

    {
      github && (
        <div class="project-links">
          <a href={github} target="_blank" class="btn github">
            GitHub
          </a>
        </div>
      )
    }
  </div>
</div>

<style>
  .project-card {
    cursor: pointer;
    background: var(--bg-secondary);
    border-radius: 15px;
    border: 1px solid rgba(99, 102, 241, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    padding: 2rem;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(99, 102, 241, 0.2);
  }

  .project-content h3 {
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    font-size: 1.4rem;
    font-weight: 600;
  }

  .project-content p {
    color: var(--text-secondary);
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.2rem;
  }

  .tag {
    background: rgba(99, 102, 241, 0.2);
    color: var(--accent-light);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
  }
  .tag:hover {
    background: var(--accent);
    color: white;
  }
  .project-links {
    display: flex;
  }

  .btn {
    padding: 0.6rem 1.2rem;
    border-radius: 12px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .btn.github {
    background: #24292f; /* GitHub dark */
    color: white;
    border: none;
  }

  .btn.github:hover {
    background: #444c56;
  }
</style>
